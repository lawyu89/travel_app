<div class="total-page-container">
  <header class="debug">
    <div class="debug clearfix">
      <div class="debug fl-l p-l-sm">
        <% if current_user %>
          <a id="sign_out" href='/logout'><%= image_tag('logout.png', :class => "log")%></a>
        <% else %>
          <div class='invis-log'></div>
        <% end %>
      </div>
      <div class="debug fl-r p-r-sm">
        <% if current_user %>
          <a href='/mycities'><%= image_tag('heart.png', :class => "log")%></a>
          <% else %>
          <a href='/users/new' class="t-left w-60 h-68"><%= image_tag('plus.png', :class => "log")%></a>
        <% end %>
      </div>
      <div class="debug center w-logo">
        <a href="/cities"><%= image_tag('swipesee_circle.png', :class => "logo")%></a>
      </div>
    </div>
    <div class="t-center m-t-neg">
      <a href="/cities"><h1 class="d-inb f-oswald fz-ms c-white">SwipeSee</h1></a>
    </div>
  </header>
  <div class="se-pre-con"></div>
<div>
  <h1 class='t-center f-oldstd'>LOG IN</h1>
  <% if @error %>
    <%= @error %>
  <% end %>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="w-90 center">
      <div class='d-b p-t-sm'><%= f.label :email, class: "f-oswald fz-xs f-weight"%></div>
      <div class='d-b'><%= f.email_field :email, :class => 'rounded w-full' %></div>

      <div class='d-b p-t-sm'><%= f.label :password, class: "f-oswald fz-xs f-weight" %></div>
      <div class='d-b'><%= f.password_field :password, :class => 'rounded w-full' %></div>
    <div class='p-t-sm t-center'>
    <%= f.submit "LOG IN", class: "f-oswald sm-rect-button-map" %>
    </div>
  <% end %>

  <%= link_to "#{image_tag('facebook-login-button.png', class: "w-220")}".html_safe, "/auth/Facebook", id: "fb-log-in", :class => 'p-t-m d-b t-center' %>

  </div>
</div>
</div>
