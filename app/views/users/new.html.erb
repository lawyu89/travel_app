<div>
  <h1>Sign Up</h1>
  <%= form_for @user do |f| %>
    <div>
      <p class='taken'><%= @user.errors.full_messages.find{|message| message.include?('taken')} %>
    </div>
    <div>
      <h2><%= f.label :username %></h2>
      <%= f.text_field :username, required: true, title: "Please Enter Your Username" %>
    </div>
    <div>
      <h2><%= f.label :email %></h2>
      <%= f.text_field :email, required: true, pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}', title: "E.g john123@gmail.com" %>
      <%=  %>
    </div>
    <div>
      <h2><%= f.label :password %></h2>
      <%= f.password_field :password, required: true, pattern: '.{6,}', title: "6 characters minimum" %>
    </div>
    <div>
      <%= f.submit "Sign Up" %>
    </div>
  <% end %>
</div>